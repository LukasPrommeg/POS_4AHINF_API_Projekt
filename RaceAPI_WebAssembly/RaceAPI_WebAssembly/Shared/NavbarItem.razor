<div class="nav-item px-3">
    <NavLink class="nav-link" href="@href" Match="NavLinkMatch.All">@Name</NavLink>
</div>

@code {
    [Parameter]
    public string Name { get; set; }
    [Parameter]
    public string href { get; set; }

    public NavbarItem()
    {
        Name = "navbarItem";
        href = "Test";
    }

    public NavbarItem(string newName = "new", string page = "Test")
    {
        Name = newName;
        href = page;
    }
}